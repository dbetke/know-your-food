extends layout

block navbar
  ul.nav.nav-pills.pull-right
    li
      a(href='../') Home
    li
      a(href='/search') Search  
    li.active
      a(href='/contribute') Contribute
    li
      a(href='/about') About
    li
      a(href='/contact') Contact
  div.spacer

block content
  div
    h4 Contribute Product Ingredients
    p
      form(method='post',action='')
        label Brand Name
        input(type='text', name='brandname', required)

        label Product Name
        input(type='text', name='productname', required)
        
        label Ingredients
        textarea(rows='5', name='ingredients', required)
        p
        input(type='submit', name='contribute', value='Contribute').a.btn          


    
