extends layout

block append script
  script
    var msg = !{JSON.stringify(message)};
    $('document').ready(function () {
      if (msg === "The product you entered already exists in the database") {
        $('#msg').addClass('alert').text(msg);
      } 
      if (msg === "Your contribution has been sent.  Thank you!") {
        $('#msg').addClass('alert').addClass('alert-success').text(msg);
      }

      $('.alert').append("<button type='button' class='close' data-dismiss='alert'>&times;</button>");
      $('.close').click(function () {
        $('#msg').hide();
      });
    });

block navbar
  ul.nav.nav-pills.pull-right
    li
      a(href='../') Home
    li
      a(href='/search') Search  
    li.active
      a(href='/contribute') Contribute
    li
      a(href='/about') About
    li
      a(href='/contact') Contact
  div.spacer

block content

  div#msg

  div.row.span3.offset2.center
    h4 Contribute Product Ingredients
    p
      form(method='post',action='')
        label Brand Name
        input(type='text', name='brandname', required)

        label Product Name
        input(type='text', name='productname', required)
        
        label Ingredients
        textarea(rows='5', name='ingredients', required)
        p
        input(type='submit', name='contribute', value='Contribute').a.btn

  div.container.narrow


    
